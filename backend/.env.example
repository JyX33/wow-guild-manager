# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=https://localhost:5173

# Database Configuration
DB_HOST=localhost
DB_PORT=5433
DB_NAME=wow_guild_manager
DB_USER=postgres
DB_PASSWORD=your_password_here

# Authentication 
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=1d
COOKIE_MAX_AGE=86400000

# Battle.net OAuth
BATTLE_NET_CLIENT_ID=your_battle_net_client_id
BATTLE_NET_CLIENT_SECRET=your_battle_net_client_secret
BATTLE_NET_REDIRECT_URI=https://localhost:5000/api/auth/callback

# Battle.net API Client Rate Limiting
BNET_MAX_CONCURRENT=20
BNET_MIN_TIME_MS=10

# Character Sync Job
CHARACTER_SYNC_LIMIT=50 # Max characters to sync per run
SYNC_JOB_CRON_SCHEDULE='0 * * * *' # Cron schedule for the sync job (Default: hourly)