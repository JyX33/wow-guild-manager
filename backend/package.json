{
  "name": "wow-guild-manager-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend for WoW Guild Manager application",
  "main": "src/index.ts",
  "scripts": {
    "start": "bun src/index.ts",
    "start:dev": "bun --watch src/index.ts",
    "dev": "bun --watch src/index.ts",
    "build": "cd ../shared && (bun add -D @types/node || true) && bun run build && cd ../backend && bun build src/index.ts --target=node --outdir=dist",
    "test": "jest",
    "test:debug": "NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles",
    "migrate": "node database/migrate.js",
    "backfill:chars": "ts-node -P tsconfig.json src/scripts/backfill-character-data.ts",
    "type-check": "cd ../shared && (bun add -D @types/node || true) && bun run build && cd ../backend && tsc --noEmit -p tsconfig.json",
    "type-check:src": "tsc --noEmit --skipLibCheck -p tsconfig.json",
    "find-unused-exports": "node scripts/find-unused-exports.js"
  },
  "dependencies": {
    "@types/connect-pg-simple": "^7.0.3",
    "@types/node-schedule": "^2.1.7",
    "axios": "^1.8.4",
    "bottleneck": "^2.19.5",
    "connect-pg-simple": "^10.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "discord.js": "^14.18.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "jsonwebtoken": "^9.0.2",
    "node-schedule": "^2.1.1",
    "p-queue": "^8.1.0",
    "pg": "^8.14.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "ts-node": "^10.9.2",
    "zod": "^3.24.4",
    "zod-validation-error": "^3.4.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.26.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/express-session": "^1.18.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/knex": "^0.15.2",
    "@types/node": "^22.13.13",
    "@types/pg": "^8.11.11",
    "globals": "^16.1.0",
    "jest": "^29.7.0",
    "knex": "^3.1.0",
    "knex-cli": "^1.0.2",
    "ts-jest": "^29.3.0",
    "ts-prune": "^0.10.3",
    "typescript": "^5.8.2"
  }
}
