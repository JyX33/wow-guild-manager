{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "..",
    "baseUrl": "..",
    "paths": {
      "@shared/types/*": ["../*"]
    }
  },
  "include": [
    "./**/*.ts",
    "../**/*.ts"
  ],
  "exclude": [
    "../node_modules"
  ]
}